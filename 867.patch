+-
+-#define LUA_MAXINTEGER		LONG_MAX
+-#define LUA_MININTEGER		LONG_MIN
+-
+-#define LUA_MAXUNSIGNED		ULONG_MAX
+-
+-#elif LUA_INT_TYPE == LUA_INT_LONGLONG	/* }{ long long */
