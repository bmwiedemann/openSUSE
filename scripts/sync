#!/bin/sh
tail -100 /home/opensuserabbit/dumprabbit.json | scripts/rabbithandle.py

rsync="rsync -a \
  --max-size=999000k \
  --exclude=DELETED \
  --exclude=.osc \
  --delete \
  --delete-excluded"
$rsync /mounts/work/SRC/openSUSE\:Factory/ in/
p="openSUSE:Factory/_project"
test -e $p || osc co "$p"
osc up "$p"
$rsync "./$p/" in/_project/
test -e ${p}_meta || osc co -M "$p" -o ${p}_meta
osc up "${p}_meta"
rsync -a "./${p}_meta/"* in/_project/
mkdir -p ~/.cache
lockfile -l 600 .pkglock
rm -rf packages
scripts/mappkgs.pl in packages
[[ $(find packages/ |wc -l) -gt 100000 ]] || exit 5
git add packages/*
git commit -a -m "update $(date -u +"%Y-%m-%d %H:%M")"
scripts/tagrelease
[ -z "$SSH_AUTH_SOCK" ] || git push --all
rm -f .pkglock
