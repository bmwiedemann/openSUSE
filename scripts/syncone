#!/usr/bin/perl -w
use strict;
{
my $pkg=shift;
die "usage: $0 PKGNAME" unless $pkg;

my @rsync=qw"rsync -a
  --max-size=999000k
  --exclude=DELETED
  --exclude=.osc
  --delete
  --delete-excluded";
system(@rsync, "/mounts/work/SRC/openSUSE\:Factory/$pkg/", "in/$pkg/");
my $first=lc(substr($pkg, 0, 1));
system(qw"rm -rf", glob("packages/$first*/$pkg"));
$ENV{PKG}=$pkg;
}
do("./scripts/mappkgs.pl");
