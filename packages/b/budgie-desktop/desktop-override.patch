--- budgie-desktop-10.5~git20190308.orig/src/wm/20_solus-project.budgie.wm.gschema.override
+++ budgie-desktop-10.5~git20190308/src/wm/20_solus-project.budgie.wm.gschema.override
@@ -1,7 +1,7 @@
-[org.gnome.mutter]
+[org.gnome.mutter:Budgie]
 edge-tiling = true
 attach-modal-dialogs = true

-[org.gnome.desktop.wm.preferences]
+[org.gnome.desktop.wm.preferences:Budgie]
