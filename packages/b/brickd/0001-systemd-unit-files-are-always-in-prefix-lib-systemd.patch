Subject: [PATCH] systemd unit files are always in $prefix/lib/systemd

---
 src/brickd/Makefile | 4 ----
 1 file changed, 4 deletions(-)

diff --git a/src/brickd/Makefile b/src/brickd/Makefile
index e93505e..729315c 100644
--- a/src/brickd/Makefile
+++ b/src/brickd/Makefile
@@ -75,12 +75,8 @@ endif
 endif
 
 ifndef syslibdir
-ifeq ($(prefix),/usr)
-	syslibdir := /lib
-else
 	syslibdir := $(prefix)/lib
 endif
-endif
 
 ifndef libdir
 	libdir := $(prefix)/lib
