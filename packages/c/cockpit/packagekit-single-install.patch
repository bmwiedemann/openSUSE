+
+/**
+ * @param {string[]} allIds
+ * @param {SelecetedState} state
+ * @returns {string[]}
+ */
+function calculateSelected(allIds, state) {
+    const selected = Object.keys(state.selected);
+
+    if (!state.allSelected) {
+        return selected;
+    }
+
+    if (selected.length === 0) {
+        return allIds;
+    }
+
+    return allIds.filter((id) => !!!state.selected[id]);
+}
