<project name="concurrent" default="jar" basedir=".">

  <property name="src"      value="src"/>
  <property name="docs"     value="docs"/>
  <property name="build"    value="build"/>
  <property name="j2se.apiurl"
    value="http://java.sun.com/j2se/1.4/docs/api/"/>

  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${src}" 
	debug="on"
	optimize="on"
        destdir="${build}"
	source="8"
	target="8"
    />
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="concurrent-${version}.jar" 
         basedir="${build}"
		 />
  </target>

  <target name="javadoc">
    <mkdir dir="${docs}"/>
    <javadoc destdir="${docs}" 
			 packagenames = "EDU.oswego.cs.dl.util.concurrent,EDU.oswego.cs.dl.util.concurrent.misc.*"
			 sourcepath="${src}" 
			 private="off"
			 >
	<link href="${j2se.apiurl}"/>
    </javadoc>
  </target>

  <target name="clean">
    <delete dir="${build}"/>
    <delete>
      <fileset dir="." includes="concurrent-*.jar"/>
    </delete>
  </target>

</project>
