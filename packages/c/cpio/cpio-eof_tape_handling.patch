+int
+tape_eof( int tape_des)
+{
+  struct mtget status;
+
+  if (rmtioctl (tape_des, MTIOCGET, (char*)&status) == -1) {
+    error (1, errno, "Cannot get tape status");
+    return 0;
+  }
+
+  if (GMT_EOF(status.mt_gstat)) {
+      return 1;
+  }
+
+  return 0;
+}
+
+int
+tape_eod( int tape_des)
+{
+  struct mtget status;
+
+  if (rmtioctl (tape_des, MTIOCGET, (char*)&status) == -1) {
+    error (1, errno, "Cannot get tape status");
+    return 1;
+  }
+
+  if (GMT_EOD(status.mt_gstat)) {
+      return 1;
+  }
+
+  return 0;
+}
