+    free(dtmp);
+
+  } else if (type == 2) {
+    char (*cval)[72] = (char (*)[72])vptr;
+
+    int row_size = 72 * sizeof(char);
+    char *ctmp;
+    if ((ctmp = (char *)malloc(n * row_size)) == 0x0) {
+      return 1;
+    }
+
+    for (int i = 0; i < n; i++) {
+      memcpy(ctmp + row_size * mapto[i], cval[i], 72);
+    }
+
+    for (int i = 0; i < n; i++) {
+      memcpy(cval[i], ctmp + row_size * i, 72);
+    }
+
+    free(ctmp);
+
+  } else if (type == 3) {
+    int *ival = (int *)vptr;
+
+    int *itmp;
+    if ((itmp = (int *)malloc(n * sizeof(int))) == 0x0) {
+      return 1;
+    }
+
+    for (int i = 0; i < n; i++) {
+      itmp[mapto[i]] = ival[i];
+    }
+
+    for (int i = 0; i < n; i++) {
+      ival[i] = itmp[i];
+    }
+
+    free(itmp);
+  }
+
+  return 0;
+}
