diff --git a/jupyterlab_server/process_app.py b/jupyterlab_server/process_app.py
index ba530c6..e108bb6 100644
--- a/jupyterlab_server/process_app.py
+++ b/jupyterlab_server/process_app.py
@@ -20,7 +20,7 @@ def get_command(self):
         """Get the command and kwargs to run with `Process`.
