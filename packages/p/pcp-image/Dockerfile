LABEL org.opencontainers.image.ref.name="6.2.1-%RELEASE%"
LABEL org.opensuse.reference="registry.opensuse.org/opensuse/pcp:6.2.1-%RELEASE%"
LABEL org.openbuildservice.disturl="%DISTURL%"
