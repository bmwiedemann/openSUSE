--- makefun-1.16.0.orig/setup.cfg
+++ makefun-1.16.0/setup.cfg
@@ -59,6 +59,7 @@ addopts =
 	--verbose
 	--doctest-modules
 	--ignore-glob='**/_*.py'
+    --asyncio-mode=auto
 filterwarnings = 
 	always
 
