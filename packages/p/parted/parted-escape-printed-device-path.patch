 static void
 _print_disk_info (const PedDevice *dev, const PedDisk *diskp)
 {
@@ -1073,6 +1097,8 @@ _print_disk_info (const PedDevice *dev,
         char *disk_flags = disk_print_flags (diskp);
 
         if (opt_machine_mode) {
