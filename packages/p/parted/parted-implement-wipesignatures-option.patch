+ */
+int
+ped_device_wipe_signatures(const PedDevice *dev, PedSector start, PedSector length)
+{
+	int ret = 0;
+
+        if (ped_architecture->dev_ops->wipe_signatures)
+                ret = ped_architecture->dev_ops->wipe_signatures(dev, start, length);
+
+	return ret;
+}
