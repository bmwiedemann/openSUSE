 		return NULL;
 	}
 
+	disk_specific->has_implicit_partition = 0;
+
 	/* CDL format, newer */
 	disk_specific->format_type = 2;
 	disk_specific->label_block = 2;
@@ -293,6 +303,7 @@ dasd_read (PedDisk* disk)
 			goto error_close_dev;
 
 		disk_specific->format_type = 1;
