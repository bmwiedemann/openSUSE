Subject: [PATCH 03/13] notcurses: supply NCOPTION_INHIBIT_SETLOCALE

---
 src/notcurses/notcurses.c | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/notcurses/notcurses.c b/src/notcurses/notcurses.c
index 34747a1..33a0f5e 100644
--- a/src/notcurses/notcurses.c
+++ b/src/notcurses/notcurses.c
@@ -5986,8 +5986,8 @@ int main(int argc, char * const *argv){
   if(!notcurses_version_check()){
     return EXIT_FAILURE;
   }
-  notcurses_options opts;
-  memset(&opts, 0, sizeof(opts));
+  notcurses_options opts = { };
+  opts.flags = NCOPTION_INHIBIT_SETLOCALE;
   if((NC = notcurses_init(&opts, stdout)) == NULL){
     return EXIT_FAILURE;
   }
