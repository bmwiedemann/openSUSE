+	if (jent_initialized == 0 || ec == NULL) {
+		if (!FIPS_jent_entropy_init()) {
+			return -1;
+		}
+	}
+
+	/* Get entropy bytes. */
+	jent_bytes = jent_read_entropy_safe(&ec, (char *)buf, buflen);
+
+	return jent_bytes;
