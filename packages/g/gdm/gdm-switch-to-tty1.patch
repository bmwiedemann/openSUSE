+static void
+jump_to_tty1 ()
+{
+        g_autoptr(GError) error = NULL;
+
+        g_debug ("Spawn jump to tty1 process");
+        g_spawn_command_line_async (SHELLSCRIPT,
+                                    &error);
+
+        if (error != NULL)
+                g_warning ("Error chvt to tty1: %s", error->message);
+}
