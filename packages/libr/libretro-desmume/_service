<services>
  <service name="tar_scm" mode="localonly">
    <param name="scm">git</param>
    <param name="url">https://github.com/libretro/desmume.git</param>
    <param name="filename">libretro-desmume</param>
    <param name="versionformat">0~git%cd</param>
    <param name="changesgenerate">enable</param>
    <param name="exclude">desmume/src/frontend/cocoa</param>
    <param name="exclude">desmume/src/frontend/posix</param>
    <param name="exclude">desmume/src/frontend/windows</param>
  </service>
  <service name="recompress" mode="localonly">
    <param name="file">*.tar</param>
    <param name="compression">xz</param>
  </service>
  <service name="set_version" mode="localonly"/>
</services>
