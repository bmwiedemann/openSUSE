+
+        norm = norm / norm.Length();
+        SbRotation rot(SbVec3f(0.,0.,1.), SbVec3f(norm.x, norm.y, norm.z));
+
+        SbMatrix t, translate;
+        t.setRotate(rot);
+        translate.setTranslate(SbVec3f(trans.x, trans.y, trans.z));
+        t.multRight(translate);
+        getManipulator()->setMatrix(t);
