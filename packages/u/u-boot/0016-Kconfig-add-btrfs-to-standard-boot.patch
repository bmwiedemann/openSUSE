From 7a71046921c19f79009b4f7b854bbe2fdec3c194 Mon Sep 17 00:00:00 2001
From: Andreas Schwab <schwab@suse.de>
Date: Wed, 26 Mar 2025 13:01:18 +0100
Subject: [PATCH] Kconfig: add btrfs to standard boot

Distro boot is deprecated, add btrfs command also to standard boot.
---
 boot/Kconfig | 1 +
 1 file changed, 1 insertion(+)

diff --git a/boot/Kconfig b/boot/Kconfig
index 93d333f6be0..2c597bfc8a7 100644
--- a/boot/Kconfig
+++ b/boot/Kconfig
@@ -446,6 +446,7 @@ config BOOT_DEFAULTS_CMDS
 	select CMD_BOOTI if ARM64
 	select CMD_BOOTZ if ARM && !ARM64
 	imply CMD_MII if NET
+	imply CMD_BTRFS
 
 config BOOT_DEFAULTS
 	bool  # Common defaults for standard boot and distroboot
