 boot/Kconfig | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/boot/Kconfig b/boot/Kconfig
index 2ddc0cb1578..93d333f6be0 100644
--- a/boot/Kconfig
+++ b/boot/Kconfig
@@ -1185,7 +1185,7 @@ config DISTRO_DEFAULTS
 	select HUSH_PARSER
 	select SYS_LONGHELP
 	select LEGACY_IMAGE_FORMAT
