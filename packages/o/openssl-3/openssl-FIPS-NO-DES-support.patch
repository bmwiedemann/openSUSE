@@ -24,8 +24,7 @@ NextIV = 1c673812cfde9675
 
 # DES EDE3 ECB test
 # FIPS(3.0.0): has a bug in the IV length #17591
-FIPSversion = >3.0.0
-FIPSversion = <3.4.0
+Availablein = default
