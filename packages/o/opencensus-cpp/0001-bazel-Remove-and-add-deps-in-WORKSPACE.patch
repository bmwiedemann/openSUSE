     urls = ["https://github.com/grpc/grpc/archive/809e7c951358a80182d7126b255c3a40881fb3fa.zip"],  # 2019-07-23T00:43:25Z
 )
 
+local_repository(
+    name = "submodule_grpc",
+    path = "/usr/src/grpc",
