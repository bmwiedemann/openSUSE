@@ -68,11 +88,6 @@ http_archive(
     urls = ["https://github.com/jupp0r/prometheus-cpp/archive/d83dd68e496e024ae0f1f0c19ac2ab0d27330330.zip"],  # 2019-07-03T18:56:43Z
 )
 
