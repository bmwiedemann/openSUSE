    <param name="revision">master</param>
    <param name="versionformat">@PARENT_TAG@+git@TAG_OFFSET@.g%h</param>
    <param name="versionrewrite-pattern">v([^+]*\+git[1-9].*)|v([^+]*)\+git0.*</param>
    <param name="versionrewrite-replacement">\1\2</param>
  </service>
