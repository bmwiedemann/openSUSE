<package>kernel-source:kernel-zfcpdump</package>
    </conditions>
    <hardware>
      <disk>
        <size unit="G">35</size>
      </disk>
      <memory>
        <size unit="G">4</size>
      </memory>
    </hardware>
  </overwrite>

