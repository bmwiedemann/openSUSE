# Based on <https://github.com/zabbly/incus/blob/stable/systemd/incus-startup>.

set -Eeuo pipefail

case "$1" in
start)
	systemctl is-active incus -q && exit 0
	exec /usr/sbin/incusd activateifneeded
;;

stop)
	systemctl is-active incus -q || exit 0
	exec /usr/sbin/incusd shutdown
;;

*)
	echo "unknown argument \`$1'" >&2
	exit 1
;;
esac
