export INCUS_SOCKET=/run/incus/unix.socket
export INCUS_EDK2_PATH=/usr/share/incus/ovmf
export PATH="$PATH:@SUSE_LIBEXEC@/incus"
# Should we use INCUS_AGENT_PATH?

exec @SUSE_LIBEXEC@/incus/incusd "$@"
