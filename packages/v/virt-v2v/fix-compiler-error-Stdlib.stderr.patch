@@ -787,7 +787,7 @@ let rec create_ovf source inspect
 
   if verbose () then (
     eprintf "OVF:\n";
-    doc_to_chan Stdlib.stderr ovf
+    doc_to_chan Pervasives.stderr ovf
   );
 
   (* Return the OVF document. *)
