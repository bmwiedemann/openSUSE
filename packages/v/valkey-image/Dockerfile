#!BuildTag: opensuse/valkey:%%valkey_version%%-%RELEASE%
#!BuildTag: opensuse/valkey:%%valkey_version%%
#!BuildTag: opensuse/valkey:8.1
#!BuildTag: opensuse/valkey:8
