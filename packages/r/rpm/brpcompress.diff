+{
+    dir=$1
+    b=$2
+
+    inode=`ls -i $b | awk '{ print $1 }'`
+    others=`find $dir -type f -inum $inode`
+    for afile in $others ; do
+	[ "$afile" != "$b" ] && rm -f "$afile"
+    done
+
+    case $b in
+	*.Z|*.gz)     gunzip  $b ;;
