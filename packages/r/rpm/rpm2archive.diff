+static inline void set_pax_entry_str(unsigned char *p, const char *val, int size, char *pax, char **paxbuf)
+{
+    size_t l = strlen(val);
+    if (paxbuf && (l > size || !pax_is_ascii(val)))
+        add_pax_attrib(paxbuf, pax, val);
+    memcpy(p, val, l < size ? l : size);
+}
