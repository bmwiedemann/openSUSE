# Escape spaces and quotes, because shell is revolting.
CMDLINE=""
for arg in "$@" ; do
    # Escape quotes in parameters, so that they're passed through cleanly.
    arg=$(sed -e 's/"/\\"/g' <<-END
$arg
END
    )
    CMDLINE="${CMDLINE} \"${arg}\""
done

cd /var/lib/rabbitmq

INIT_LOG_DIR=/var/log/rabbitmq

SCRIPT=`basename $0`

if [ `id -u` = `id -u rabbitmq` -a "$SCRIPT" = "rabbitmq-server" ] ; then
    @RABBITMQ_ROOT@/sbin/rabbitmq-server "$@" 2> ${INIT_LOG_DIR}/startup_err > ${INIT_LOG_DIR}/startup_log
elif [ `id -u` = `id -u rabbitmq` -o "$SCRIPT" = "rabbitmq-plugins" ] ; then
    @RABBITMQ_ROOT@/sbin/${SCRIPT} "$@"
elif [ `id -u` = 0 ] ; then
    @SU_RABBITMQ_SH_C@ "@RABBITMQ_ROOT@/sbin/${SCRIPT} ${CMDLINE}"
else
    @RABBITMQ_ROOT@/sbin/${SCRIPT}
    echo
    echo "Only root or rabbitmq should run ${SCRIPT}"
    echo
    exit 1
fi
