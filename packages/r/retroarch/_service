    <param name="version">1.9.0</param>
    <param name="exclude">media/icons</param>
    <param name="exclude">ps2</param>
    <param name="exclude">uwp</param>
    <param name="exclude">wii</param>
    <param name="exclude">wiiu</param>
  </service>
