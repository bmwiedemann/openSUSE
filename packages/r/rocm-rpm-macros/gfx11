#%Module 1.0
#
#  ROCm module for use with 'environment-modules' package:
# 

conflict rocm

setenv        ROCM_BIN      /usr/lib64/rocm/gfx11/bin
setenv        ROCM_INCLUDE  /usr/lib64/rocm/gfx11/include
setenv        ROCM_LIB      /usr/lib64/rocm/gfx11/lib
setenv        ROCM_GPUS     "gfx1100;gfx1101;gfx1102"
prepend-path  PATH          /usr/lib64/rocm/gfx11/bin
prepend-path  LD_LIBRARY_PATH /usr/lib64/rocm/gfx11/lib
prepend-path  PYTHONPATH    /usr/lib64/rocm/gfx11/lib64/python3.13/site-packages/
