#%Module 1.0
#
#  ROCm module for use with 'environment-modules' package:
# 

conflict rocm

setenv        ROCM_BIN      /usr/lib64/rocm/gfx12/bin
setenv        ROCM_INCLUDE  /usr/lib64/rocm/gfx12/include
setenv        ROCM_LIB      /usr/lib64/rocm/gfx12/lib
setenv        ROCM_GPUS     "gfx1200;gfx1201"
prepend-path  PATH          /usr/lib64/rocm/gfx12/bin
prepend-path  LD_LIBRARY_PATH /usr/lib64/rocm/gfx12/lib
prepend-path  PYTHONPATH    /usr/lib64/rocm/gfx12/lib64/python3.13/site-packages/
