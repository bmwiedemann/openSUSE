#%Module 1.0
#
#  ROCm module for use with 'environment-modules' package:
# 

conflict rocm

setenv        ROCM_BIN      /usr/lib64/rocm/gfx942/bin
setenv        ROCM_INCLUDE  /usr/lib64/rocm/gfx942/include
setenv        ROCM_LIB      /usr/lib64/rocm/gfx942/lib
setenv        ROCM_GPUS     "gfx942"
prepend-path  PATH          /usr/lib64/rocm/gfx942/bin:/usr/lib64/rocm/gfx9/bin
prepend-path  LD_LIBRARY_PATH /usr/lib64/rocm/gfx942/lib:/usr/lib64/rocm/gfx9/lib
prepend-path  PYTHONPATH    /usr/lib64/rocm/gfx942/lib64/python3.13/site-packages/
