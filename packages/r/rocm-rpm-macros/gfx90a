#%Module 1.0
#
#  ROCm module for use with 'environment-modules' package:
# 

conflict rocm

setenv        ROCM_BIN      /usr/lib64/rocm/gfx90a/bin
setenv        ROCM_INCLUDE  /usr/lib64/rocm/gfx90a/include
setenv        ROCM_LIB      /usr/lib64/rocm/gfx90a/lib
setenv        ROCM_GPUS     "gfx90a:xnack+;gfx90a:xnack-"
prepend-path  PATH          /usr/lib64/rocm/gfx90a/bin:/usr/lib64/rocm/gfx9/bin
prepend-path  LD_LIBRARY_PATH /usr/lib64/rocm/gfx90a/lib:/usr/lib64/rocm/gfx9/lib
prepend-path  PYTHONPATH    /usr/lib64/rocm/gfx90a/lib64/python3.13/site-packages/
