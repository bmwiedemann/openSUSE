/var/log/nginx/*.log {
    su USER GROUP
    compress
    dateext
    maxage 365
    rotate 99
    size=+4096k
    missingok
    notifempty
    delaycompress
    lastaction
      # "-s reopen" will use the pid file passed in the config file or the compiled in default path
      [ -f /run/nginx.pid ] && /usr/sbin/nginx -s reopen
    endscript
}
