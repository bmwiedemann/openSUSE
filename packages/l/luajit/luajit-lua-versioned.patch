 # Note: setting it with := doesn't work, since it will change during the build.
 
-MMVERSION= $(MAJVER).$(MINVER)
+MMVERSION= $(SUFFIX)-$(MAJVER).$(MINVER)
 VERSION= $(MMVERSION).$(RELVER)
 
 ##############################################################################
@@ -52,7 +53,7 @@ INSTALL_MAN= $(INSTALL_SHARE)/man/man1
