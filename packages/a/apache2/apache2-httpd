. /usr/share/apache2/script-helpers

find_mpm
apache_bin="$HTTPD_SBIN_BASE-$HTTPD_MPM"
if ! [ -x $apache_bin ]; then
	echo >&2 "$apache_bin is not a valid httpd binary."
	echo >&2 "Check your APACHE_MPM setting in /etc/sysconfig/apache2."
	exit 1
fi

exec $apache_bin "$@"
