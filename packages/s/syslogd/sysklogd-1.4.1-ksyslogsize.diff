+static void SetBufSize(void)
+
+{
+	auto int n, sz;
+
+	n = ksyslog(10, NULL, 0);       /* read ringbuffer size */
+	if (n > 0) {
+		log_buf_size = n;
+		log_buffer = (char *) malloc(log_buf_size);
+		if (!log_buffer) {
+			perror("ksyslog");
+			exit(1);
+		}
+	}
+
+	if (!log_buf_size) {
+		sz = LOG_BUFFER_SIZE;
+		while (1) {
+			log_buffer = (char *) malloc(sz+8);
+			if (!log_buffer) {
+				perror("ksyslog");
+				exit(1);
+			}
+			n = ksyslog(3, log_buffer, sz+8);
+			if (n < sz+8 || sz >= (1<<22))
+				break;
+			free(log_buffer);
+			sz <<= 1;
+		}
+		log_buf_size = sz;
+	}
+
+ 	if (n < 0) {
