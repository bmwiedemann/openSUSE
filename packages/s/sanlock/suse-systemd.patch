+++ sanlock-3.8.5/init.d/sanlock.service
@@ -5,8 +5,10 @@ Wants=wdmd.service
 
 [Service]
 Type=forking
-ExecStart=/lib/systemd/systemd-sanlock start
-ExecStop=/lib/systemd/systemd-sanlock stop
+EnvironmentFile=-/etc/sysconfig/sanlock
