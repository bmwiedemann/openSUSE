LABEL org.opencontainers.image.ref.name="%%samba_version%%-%RELEASE%"
LABEL org.opensuse.reference="registry.opensuse.org/opensuse/samba-server:%%samba_version%%-%RELEASE%"
LABEL org.openbuildservice.disturl="%DISTURL%"
LABEL org.opensuse.lifecycle-url="https://en.opensuse.org/Lifetime#openSUSE_BCI"
LABEL org.opensuse.release-stage="released"
# endlabelprefix
LABEL io.artifacthub.package.readme-url="%SOURCEURL_WITH(README.md)%"
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
EXPOSE 445/tcp

COPY smb.conf /etc/samba/

COPY docker-entrypoint.sh /usr/local/bin/
RUN set -euo pipefail; chmod 755 /usr/local/bin/docker-entrypoint.sh

COPY smbuser.sh /usr/local/bin/smbuser
RUN set -euo pipefail; chmod 755 /usr/local/bin/smbuser

COPY shadow.sh /usr/local/bin/useradd
RUN set -euo pipefail; chmod 755 /usr/local/bin/useradd
COPY shadow.sh /usr/local/bin/usermod
RUN set -euo pipefail; chmod 755 /usr/local/bin/usermod
COPY shadow.sh /usr/local/bin/userdel
RUN set -euo pipefail; chmod 755 /usr/local/bin/userdel
COPY shadow.sh /usr/local/bin/passwd
RUN set -euo pipefail; chmod 755 /usr/local/bin/passwd
COPY shadow.sh /usr/local/bin/groupadd
RUN set -euo pipefail; chmod 755 /usr/local/bin/groupadd
COPY shadow.sh /usr/local/bin/groupmod
RUN set -euo pipefail; chmod 755 /usr/local/bin/groupmod
COPY shadow.sh /usr/local/bin/groupdel
RUN set -euo pipefail; chmod 755 /usr/local/bin/groupdel

HEALTHCHECK --interval=60s --timeout=15s                         CMD smbclient -L \localhost -U % -m SMB3

VOLUME /shares /var/lib/samba
