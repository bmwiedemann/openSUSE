-function _runxmltest {
-   typeset _TESTXML=$1
+_runxmltest() {
+   _TESTXML=$1
 
    _TEST=${_TESTXML%.xml}
    _TESTDIR=$( dirname $_TEST)
@@ -41,8 +41,9 @@ function _runxmltest {
    echo -n "Running test $_TESTXML ... "
 
