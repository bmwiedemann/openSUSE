Index: sbl-3.5.0.20130317.git7a75bc29/make.config
===================================================================
--- sbl-3.5.0.20130317.git7a75bc29.orig/make.config
+++ sbl-3.5.0.20130317.git7a75bc29/make.config
@@ -3,7 +3,7 @@
 
 CONFDIR=/etc
 PREFIX=/usr
-LIBDIR=$(PREFIX)/lib
+LIBDIR=$(PREFIX)/lib64
 SBINDIR=$(PREFIX)/sbin
 PROGPATH=$(PREFIX)/lib/sbl
 MANDIR=$(PREFIX)/share/man
