<?xml version="1.0" encoding="UTF-8"?>
<constraints>
  <hardware>
      <memory>
        <size unit="G">4</size>
      </memory>
  </hardware>
  <overwrite>
    <conditions>
      <!-- 15.6's aarch64 build needs more memory than factory -->
      <arch>aarch64</arch>
      <arch>ppc64le</arch>
    </conditions>
    <hardware>
      <memory>
        <size unit="G">5</size>
      </memory>
    </hardware>
  </overwrite>
  <!-- relax constraints for qt6-graphs:docs -->
  <overwrite>
    <conditions>
      <package>qt6-graphs:docs</package>
    </conditions>
    <hardware>
      <memory>
        <size unit="G">2</size>
      </memory>
    </hardware>
  </overwrite>
</constraints>
