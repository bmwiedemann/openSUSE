<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/deepin/dde/appearance/" id="com.deepin.dde.appearance" gettext-domain="DDE">
    <key type="s" name="gtk-theme">
      <default>'deepin'</default>
      <summary>Gtk+ theme</summary>
      <description>
        Basename of the default theme used by gtk+.
      </description>
    </key>
    <key type="b" name="theme-auto">
        <default>false</default>
        <summary></summary>
        <description></description>
    </key>

    <key type="s" name="icon-theme">
      <default>'bloom'</default>
      <summary>Icon theme</summary>
      <description>
        Icon theme to use for the panel, nautilus etc.
      </description>
    </key>
    <key type="s" name="cursor-theme">
      <default>'bloom'</default>
      <summary>Cursor theme</summary>
      <description>
        Cursor theme name. Used only by Xservers that support the Xcursor extension.
      </description>
    </key>
    <key type="s" name="sound-theme">
      <default>'deepin'</default>
      <summary>System sound theme</summary>
      <description>Set the system sound theme</description>
    </key>
    <key type="s" name="font-standard">
      <default>'Noto Sans'</default>
      <summary>Standard Font</summary>
      <description>The standard font for desktop</description>
    </key>
    <key type="s" name="font-monospace">
      <default>'Noto Mono'</default>
      <summary>Monospace Font</summary>
      <description>The monospace font for desktop</description>
    </key>
    <key type="d" name="font-size">
      <default>10.5</default>
      <summary>Font size</summary>
      <description>The desktop font size</description>
    </key>
    <key name="extra-picture-uris" type="as">
        <default>[]</default>
        <summary>Deprecated</summary>
        <description></description>
    </key>
    <key name="background-uris" type="as">
        <default>['file:///usr/share/wallpapers/openSUSEdefault/contents/images/1920x1080.jpg']</default>
        <summary>desktop background picture URIs for workspaces</summary>
        <description>Note that the backend only supports local (file://) URIs.</description>
    </key>
    <key name="excluded-icon-themes" type="as">
      <default>['hicolor','gnome','Adwaita']</default>
      <summary>blacklist</summary>
      <description>Icon theme black list.</description>
    </key>
    <key name="opacity" type="d">
      <default>0.4</default>
      <summary>dde ui opacity</summary>
      <description></description>
      <range min="0.0" max="1.0" />
    </key>
    <key name="wallpaper-slideshow" type="s">
      <default>''</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="wallpaper-uris" type="s">
      <default>''</default>
      <summary></summary>
      <description>wallpaper json string</description>
    </key>
  </schema>
</schemalist>
