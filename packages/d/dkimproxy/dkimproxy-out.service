# Description:
#
#  Used to start the DKIMproxy. This is an SMTP-proxy 
#  that implements the DKIM and DomainKeys standards
#

[Unit]
Description=Outbound DKIM-proxy (dkimproxy.out)
After=remote-fs.target


[Service]
Type=forking
EnvironmentFile=/etc/sysconfig/dkimproxy
PIDFile=/run/dkimproxy_out.pid
ExecStart=/usr/share/dkimproxy/bin/dkimproxy.out --conf_file=${DKIMPROXY_OUT_CFG} --user=${DKIMPROXY_USER} --group=${DKIMPROXY_GROUP} --daemonize  --pidfile=/run/dkimproxy_out.pid


[Install]
WantedBy=multi-user.target
