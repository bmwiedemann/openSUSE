+++ paramiko-2.7.2/setup.cfg
@@ -13,7 +13,6 @@ ignore = E124,E125,E128,E261,E301,E302,E
 max-line-length = 79
 
 [tool:pytest]
-addopts = -p no:relaxed
 looponfailroots = tests paramiko
