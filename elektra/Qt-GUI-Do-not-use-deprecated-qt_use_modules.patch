@@ -61,7 +61,7 @@ else ()
 add_executable(qt-gui ${qt-gui_SRCS} ${qt-gui_HDRS} ${UIS} ${RSCS} ${TRS})
 add_dependencies (qt-gui kdberrors_generated)
 
-qt5_use_modules(qt-gui Quick Gui Core Qml Widgets)
