[Unit]
Description=Daily usage statistics for hylafax
Documentation=man:faxcron(8) 
Requires=hylafax-hfaxd.service

[Timer]
OnCalendar=daily
AccuracySec=12h
Persistent=true

[Install]
WantedBy=timers.target
